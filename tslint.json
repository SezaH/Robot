{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "interface-name": [false, "always-prefix"],
    "no-empty": [
      true,
      "allow-empty-catch"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "arrow-parens": false,
    "no-namespace": false,
    "no-console": false,
    "variable-name": [true, "ban-keywords", "check-format","allow-leading-underscore"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
